@page "/checkout/success/{OrderId}"

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 class="display-4">Thank You!</h1>
            <p class="lead">Your order has been placed successfully.</p>
            <div class="alert alert-success" role="alert">
                <h4 class="alert-heading">Order Confirmation</h4>
                <p>Your order number is <strong>#123456</strong>. You will receive an email confirmation shortly.</p>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-8 offset-md-2">
            <h4>Order Details</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Total</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>Awesome Product</td>
                        <td>2</td>
                        <td>$50.00</td>
                        <td>$100.00</td>
                    </tr>
                    <tr>
                        <td>Another Great Product</td>
                        <td>1</td>
                        <td>$30.00</td>
                        <td>$30.00</td>
                    </tr>
                    <tr>
                        <td>Final Product</td>
                        <td>3</td>
                        <td>$20.00</td>
                        <td>$60.00</td>
                    </tr>
                    </tbody>
                    <tfoot>
                    <tr>
                        <th colspan="3">Grand Total</th>
                        <th>$190.00</th>
                    </tr>
                    </tfoot>
                </table>
            </div>
            <div class="text-center mt-4">
                <button class="btn btn-primary" @onclick="ContinueShopping_Click">Continue Shopping</button>
            </div>
        </div>
    </div>
</div>