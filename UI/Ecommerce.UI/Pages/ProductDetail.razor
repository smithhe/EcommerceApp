@page "/ProductDetail/{ProductId}"
@using Blazored.Toast.Configuration

<BlazoredToasts Position="ToastPosition.TopRight"
                Timeout="10"
                IconType="IconType.FontAwesome"
                SuccessClass="success-toast-override"
                SuccessIcon="done_outline"
                ErrorIcon="fa fa-bug"/>

@if (this.Product == null)
{
    <div style="position:fixed;top:50%;left:50%;margin-top:-50px;margin-left:-100px;">
        <img src="images/ajax-loader.gif" alt="Loading..."/>
    </div>
}
else
{
    <div class="row w-100">
        <div class="col-md-8">
            <img src="@this.Product.ImageUrl" class="card-img-top" alt="Product 1">
        </div>
        <div class="col-md-4">
            <div class="row w-100">
                <div class="col">
                    <h1 class="display-4">@this.Product.Name</h1>
                </div>
            </div>
            <div class="row w-100">
                <div class="col">
                    <h1 class="display-4">@this.Product.Description</h1>
                </div>
            </div>
            <div class="row w-100">
                <div class="col">
                    <h1 class="display-4">@this.Product.Description</h1>
                </div>
            </div>
        </div>
    </div>
    
    
}