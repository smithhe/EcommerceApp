{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Grafana.Loki" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Error",
        "MassTransit": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://loki:3100",
          "textFormatter": "Ecommerce.Worker.EcommerceLogTextFormatter, Ecommerce.Worker",
          "labels": [
            {
              "key": "app",
              "value": "EcommerceWorker"
            },
            {
              "key": "env",
              "value": "qa"
            }
          ],
          "propertiesAsLabels": [
            "EcommerceWorker"
          ]
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "Application": "EcommerceApp"
    }
  }
}